<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="0dp"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/journal_title_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playfair_display_black"
            android:padding="12dp"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorBlack"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/journal_entry_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/work_sans_light"
            android:maxLines="2"
            android:minLines="2"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="0dp"
            android:text="Your Dreamboat"
            android:textColor="#657A7A7A"
            android:textSize="16sp"
            android:textStyle="italic"
            android:visibility="visible" />

        <TextView
            android:id="@+id/journal_timestamp_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_light"
            android:padding="12dp"
            android:text="Date created" />

    </LinearLayout>

</androidx.cardview.widget.CardView>